---
const {frontmatter} = Astro.props;
---

<style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,400;0,500;1,700&display=swap');
    html {
        font-family: 'Fira Sans';
        background-color:#1e1e2e;
        color:#cdd6f4;
        display: flex;
        justify-content:center;
        padding-left:20%;
        padding-right:20%;
    }

    .logo a {
        text-decoration:none;
        color: #cdd6f4;
    }

    .banner{
        width:100%;
        max-height:200px;     
        object-fit:cover;
        filter: blur(.05rem);
    }

    div{
        text-align:justify;
        text-justify: inter-word;
    }

    span {
        color: #f38ba8;
    }
    .logo{
        font-style:italic;
        font-weight:700;
    }
    h3{
        font-weight:400;
        color:#a6adc8;
        font-size:16px;
    }

    .article-list li{
        margin-top: 50px;
        list-style-type: none;
    }

    .article-list li a{
        color:#f38ba8;
        font-weight:bold;
        font-size:18px;
    }

    hr {
        margin-bottom: 30px;
    }

    .bl{
        display:flex;
        justify-content:center;
    }
    blockquote {
        display:flex;
        flex-direction: column;
        align-items:start;
        border-left: 6px solid #b4befe;
        background:#45475a;
        width: 80%;
        padding:20px;
        margin:10px;
        text-align:left;
    }
</style>
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{frontmatter.title}</title>
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#ffc40d">
		<meta name="theme-color" content="#ffffff">
	</head>
	<body>
        <div>
            <h1 class="logo"><a href="/"><span>@</span>Kowoala</a></h1>
            <img class="banner" src={frontmatter.banner}/>
            <h1>{frontmatter.title}</h1>
            <h3>{frontmatter.date}</h3>
            <hr>
    		<slot />
        </div>
        <div class="bl">
            <blockquote>
                <p>Copyright (C) 2023  SOARES Kenneth under the terms of the GNU General Public License version 3.</p>
                
                <a href="https://astro.build">
                    <img src="https://astro.badg.es/v1/built-with-astro/small.svg" alt="Built with Astro">
                </a>
            </blockquote>
        </div>
	</body>

</html>
