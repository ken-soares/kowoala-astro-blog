---
const {frontmatter} = Astro.props;
import "../../src/styles.css";
---

<style>
    .banner {
        width: 100%;
        max-height: 200px;
        object-fit: cover;
        filter: blur(0.05rem);
    }

    h3 {
        font-weight: 400;
        color: #a6adc8;
        font-size: 16px;
    }

    hr {
        margin-bottom: 30px;
    }

    .bl{
        display:flex;
        justify-content:center;
    }
</style>

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{frontmatter.title}</title>
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="manifest" href="/site.webmanifest">
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
        <meta name="msapplication-TileColor" content="#ffc40d">
        <meta name="theme-color" content="#ffffff">
    </head>
    <body>
        <div>
            <h1 class="logo"><a href="/"><span>@</span>Kowoala</a></h1>
            <img class="banner" src={frontmatter.banner}/>
            <h1>{frontmatter.title}</h1>
            <h3>{frontmatter.date}</h3>
            <hr>
            <slot />
        </div>
        <div class="bl">
            <blockquote>
                <p>Copyright (C) 2023  SOARES Kenneth under the terms of the GNU General Public License version 3.</p>
                
                <a href="https://astro.build">
                    <img src="https://astro.badg.es/v1/built-with-astro/small.svg" alt="Built with Astro">
                </a>
            </blockquote>
        </div>
    </body>
</html>
